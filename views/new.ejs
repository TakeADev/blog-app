<div class="container">
    <h1 class="mt-3">New Blog Post</h1>
    <form action="/posts" method="POST">
    <div class="form-group">
        <label class="mt-4" for="blogTitle">Title:</label>
        <input class="form-control" type="text" name="blog[title]" id="blogTitle" placeholder="title" required>
    </div>
    <div class="form-group">
        <label class="mt-3" for="blogImage">Image URL:</label>
        <input class="form-control" type="text" name="blog[image]" id="blogImage" placeholder="image url" required>
    </div>
    <div class="form-group">
        <label class="mt-3" for="blogTagline">Tagline</label>
        <input class="form-control" type="text" name="blog[tagline]" id="blogTagline" placeholder="tagline">
    </div>
    <div class="form-group">
        <!-- <label class="mt-3" for="blogTagline">Genre (tech, development, gaming, other)</label>
        <input class="form-control" type="text" name="blog[genre]" id="blogGenre" placeholder="genre" required> -->
        <label class="mt-3" for="blogGenre">Genre</label>
        <select class="custom-select" name="blog[genre]" id="blogGenre" required>
        <option selected>Genre (Pick One)</option>
        <option value="tech">Tech</option>
        <option value="development">Development</option>
        <option value="gaming">Gaming</option>
        <option value="other">Other (default)</option>
      </select>
    </div>
    
    <div class="form-group">
        <label class="mt-3 for="blogBody">Body</label>
        <textarea class="form-control" name="blog[body]" id="blogBody" cols="50" rows="20" placeholder="body"></textarea>
    </div>
    <button type="submit">Submit</button>
</form>
</div>


