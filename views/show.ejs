<%- include ('partials/header') -%> 
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
    <a class="navbar-brand mr-5" href="/"><i class="fas fa-book"></i> Blog</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/posts/genre/tech">Tech</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/posts/genre/development">Development</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/posts/genre/gaming">Gaming</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/posts/genre/other">Other</a>
          </li>
        </ul>
      </div>
      <div class="collapse navbar-collapse mr-auto" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a href="/posts/new" class="nav-link">New Post</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<div class="container mt-5">
    <img class="blog-img" src="<%= blog.image %>">
    <h1><%= blog.title %></h1>
    <p class=""><%- blog.body %></p>
    <hr>
    <div class="row">
        <span class="mb-5"><%= blog.date.toDateString() %></span>
    </div>
    <div>
      <% blog.comments.forEach(comment => { %>
        <p><%= comment.text %></p>
        <p><%= comment.author %></p>
      <% }) %> 
    </div>
    <div class="row">
        <a href="/posts/<%= blog._id %>/edit" class="btn btn-outline-info btn-lg mr-3 mb-5">Edit</a>
    <form action="/posts/<%= blog.id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger btn-lg " type="submit">Delete</button>
    </form>
    </div>
</div>
<%- include ('partials/footer') -%> 