<div class="container mt-5">
  <img class="blog-img" src="<%= blog.image %>">
  <h1 class="mb-5"><%= blog.title %></h1>
  <p class="blog-body"><%- blog.body %></p>
  <hr>
  <div class="row">
    <span class="mb-5 ml-auto"><%= blog.date.toDateString() %></span>
  </div>
  <form action="/posts/<%= blog._id %>/comments" method="POST">
    <div class="form-group">
      <h2>Leave a comment:</h2>
      <input class="form-control mb-3" type="text" name="comment[author]" placeholder="name">
      <textarea class="form-control mb-3" name="comment[text]" placeholder="comment" cols="30" rows="7"></textarea>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </div>
  </form>
  <div class="row">
    <div class="col-12">
      <h3 class="mb-3">Comments</h3>
    </div>
  </div>
  <% blog.comments.forEach(comment => { %>
  <div class="row">
    <div class="col-12">
      <div class="comment">
        <a href="#" class="ml-1"><%= comment.author %><a>
        <p class="ml-4"><%= comment.text %></p>
      </div>
    </div>
  </div>
  <% }) %>
  
  <div class="row">
    <div class="col-12">
    <form class="inline-form my-5" action="/posts/<%= blog.id %>?_method=DELETE" method="POST">
      <a href="/posts/<%= blog._id %>/edit" class="btn btn-outline-info btn-lg mr-3">Edit</a>
      <button class="btn btn-danger btn-lg " type="submit">Delete</button>
    </form>
    </div>
  </div>
</div>
<%- include ('partials/footer') -%>