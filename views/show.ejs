  <div class="container">
    <a class="navbar-brand mr-5" href="/"><i class="fas fa-book"></i> Blog</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/posts/genre/tech">Tech</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/posts/genre/development">Development</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/posts/genre/gaming">Gaming</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/posts/genre/other">Other</a>
        </li>
      </ul>
    </div>
    <div class="collapse navbar-collapse mr-auto" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a href="/posts/new" class="nav-link">New Post</a>
        </li>
        <li class="nav-item">
          <a href="/login" class="nav-link">Login</a>
        </li>
        <li class="nav-item">
          <a href="/register" class="nav-link">Sign Up</a>
