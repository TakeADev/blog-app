<%- include ('partials/header') -%>

<div class="container mt-5">
  <img class="blog-img" src="<%= blog.image %>">
  <h1 class="mb-5"><%= blog.title %></h1>
  <p class="blog-body"><%- blog.body %></p>
  <hr>
  <div class="row">
    <span class="mb-5 ml-auto"><%= blog.date.toDateString() %></span>
  </div>
  <h2 class="mb-5"><a href="/login">Log in</a> or <a href="/register">Sign Up</a> to leave a comment!</h2>
  <div class="row">
    <div class="col-12">
      <h3 class="mb-3">Comments</h3>
    </div>
  </div>
  <% blog.comments.forEach(comment => { %>
  <div class="row">
    <div class="col-12">
      <div class="comment">
        <p class="ml-1"><b><%= comment.author.username %>:</b><p>
        <p class="ml-4"><%= comment.text %></p>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<%- include ('partials/footer') -%>