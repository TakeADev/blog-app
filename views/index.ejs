<%- include ('partials/header') -%>

  <div class="container">
    <h1 class="mt-3">Welcome to Blog Zone!</h1>
    
      <% blogs.forEach(blog => { %>
        <div class="row blog-card">
           <div class="col-12 col-md-6 mt-5 text-center text-md-left">
          <img class="card-img" src="<%= blog.image %>">
        </div>
          <div class="col-12 col-md-6 mt-5 text-center text-md-left">
            <h2><%= blog.title %> </h2>
          <h3>by <%= blog.author.username %> </h3>
          <p><%- blog.body.substring(0, 150) %>...</p>
          <a href="/posts/<%= blog._id %>">Read More...</a>
          </div>
        </div>
        <% }) %> 
    
  </div>
    

<%- include ('partials/footer') -%> 