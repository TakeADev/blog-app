<%- include ('partials/header') -%> 

<div class="container">
    <h1>Edit <%= blog.title %> </h1>
<form action="/posts/<%= blog._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label class="mt-4" for="blogTitle">Title:</label>
        <input class="form-control" type="text" name="blog[title]" id="blogTitle" value="<%= blog.title %>">
    </div>
    <div class="form-group">
        <label class="mt-3" for="blogImage">Image URL:</label>
        <input class="form-control" type="text" name="blog[image]" id="blogImage" value="<%= blog.image %>">
    </div>
    <div class="form-group">
        <label class="mt-3" for="blogGenre">Genre</label>
        <select class="custom-select" name="blog[genre]" id="blogGenre" required>
        <option selected><%= blog.genre %></option>
        <option value="tech">Tech</option>
        <option value="development">Development</option>
        <option value="gaming">Gaming</option>
        <option value="other">Other (default)</option>
      </select>
    </div>
    <div class="form-group">
        <label class="mt-3 for="blogBody">Body</label>
        <textarea class="form-control" name="blog[body]" id="blogBody" cols="50" rows="20"><%= blog.body%></textarea>
    </div>
    <button class="btn btn-primary btn-lg btn-block my-5" type="submit">Submit</button>
</form>
</div>

<%- include ('partials/footer') -%> 